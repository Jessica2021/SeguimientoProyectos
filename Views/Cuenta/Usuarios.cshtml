@using ProyectoS.Models;
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Lista de usuarios</h1>

    </div>

    <!-- Content Row -->
    <div class="row">

        <br />
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="table2" class="table table-condensed table-striped table-bordered">
                    <thead>
                        <tr>

                            
                            <th><center>Nombre </center></th>
                            <th><center>Usuarios</center></th>
                            <th><center>Compañia</center></th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (ProyectoS.Models.vw_ListaUsuarios item in ViewBag.ListaUsuarios)
                        {
                            <tr>

                                <td style="text-align: center;">
                                    @item.Nombre
                                </td>


                                <td style="text-align: center;">
                                    @item.Usuario

                                </td>

                                <td style="text-align: center;">
                                    @item.NombreCompañia
                                </td>

                               
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <br />
            </div>
        </div>
    </div>



</div>