@using ProyectoS.Models;
@{
    ViewBag.Title = "Tikets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Historias - Tikets</h1>

    </div>

    <!-- Content Row -->
    <div class="row">

        <br />
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="table2" class="table table-condensed table-striped table-bordered">
                    <thead>
                        <tr>

                            <th><center>Acciones</center></th>
                            <th><center>Nombre </center></th>
                            <th><center>Descripción</center></th>
                            <th><center>Usuario de creación</center></th>
                            <th><center>Fecha de creación</center></th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (ProyectoS.Models.vw_ListaHistorias item in ViewBag.ListaHistorias)
                        {
                            <tr>
                                <td style="text-align:center">
                                    <div class="dropdown">
                                        <a class="dropdown-toggle rowlink" data-toggle="dropdown" href="#" title="Opciones">
                                            <i class="glyphicon glyphicon-th-list"></i>
                                        </a>
                                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel" style="text-align:left;">

                                            <li><a class="alink" href="/Proyecto/NuevoTiket?RowID=@item.RowID"><i class="glyphicon glyphicon-edit"></i> Nuevo Tiket</a></li>
                                            <li><a class="alink" href="/Proyecto/ListaTikets?RowID=@item.RowID"><i class="glyphicon glyphicon-edit"></i> Ver Tikets</a></li>

                                        </ul>
                                    </div>
                                </td>

                                <td style="text-align: center;">
                                    @item.Nombre
                                </td>


                                <td style="text-align: center;">
                                    @item.Descipcion

                                </td>

                                <td style="text-align: center;">
                                    @item.UsuarioCreacion
                                </td>

                                <td style="text-align: center;">
                                    @item.FechaCreacion
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <br />
            </div>
        </div>
    </div>



</div>